<h1 class="page-title">Termination Report</h1>

{{#collection.length}}
<table class="table">
  <thead>
    <th>Date</th>
    <th>Plugin</th>
    <th>Message</th>
  </thead>
  <tbody>
    {{#collection}}
      <tr>
        <td>{{formattedTime}}</td>
        <td>{{plugin}}</td>
        <td>{{message}}</td>
      </tr>
    {{/collection}}
  </tbody>
</table>
{{/collection.length}}

{{^collection.length}}
  <div class="empty-list">No plugins have been terminated</div>
{{/collection.length}}
